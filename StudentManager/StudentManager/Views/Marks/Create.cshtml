@model StudentManager.Models.Mark

@{
    ViewData["Title"] = "Create";
    var accountId = ViewData["AccountId"] as List<Account>;
    var subjectId = ViewData["SubjectId"] as List<Subject>;
}

<h2>Create</h2>

<h4>Mark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Theory" class="control-label"></label>
                <input asp-for="Theory" class="form-control" />
                <span asp-validation-for="Theory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Practice" class="control-label"></label>
                <input asp-for="Practice" class="form-control" />
                <span asp-validation-for="Practice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment" class="control-label"></label>
                <input asp-for="Assignment" class="form-control" />
                <span asp-validation-for="Assignment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <select asp-for="Account" class="form-control">
                    @foreach (var c in accountId)
                    {
                        <option value="@c.ID">@c.FullName</option>
                    }
                </select>
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Subject" class="form-control">
                    @foreach (var c in subjectId)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model StudentManager.Models.ClassRoom


@{
    ViewData["Title"] = "Create";
    var List = ViewData["List"] as List<Account>;
}

<h2>Create</h2>

<h4>ClassRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <select asp-for="Account" class="form-control">
                    @foreach (var ac in List)
                    {
                    <option value="@ac.FullName">@ac.FullName</option>
                    }
                </select>
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
